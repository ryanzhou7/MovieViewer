<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boldFont" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movie_detail_item" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">@dimen/layout_intra_item_vertical_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="material_clickable" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
